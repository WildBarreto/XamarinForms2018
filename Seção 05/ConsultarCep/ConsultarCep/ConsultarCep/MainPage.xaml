<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ConsultarCep"
             x:Class="ConsultarCep.MainPage">

    <StackLayout BackgroundColor="#FFBF00" Padding="30" Spacing="30"> <!--serve para empilhar os elementos-->
        <Image Source="logo.png" x:Name="Logo"/> <!--Tag para introduzir uma imagem -->
        <Entry Placeholder="Digite o cep" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" x:Name="CEP"/>  <!--Tag para campo de texto-->
        <Button Text="BUSCAR CEP" TextColor="#FFFFFF" BackgroundColor="#00416B" x:Name="BOTAO"/> <!--Tag para Botão-->

        <!-- Place new controls here -->
        <Label Text="" x:Name="RESULTADO"
            HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />
    </StackLayout>

</ContentPage>
